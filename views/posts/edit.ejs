<!DOCTYPE html>
<html lang='en'>
  <%- include('../head') %>
  <body>
    <%- include('../navbar') %>       
    <% if(typeof post !== 'undefined') { %>
      <div class='d-flex align-items-center justify-content-center vh-100'>
        <form class='card w-50 p-3 form-post' data-doc=<%= post._id %>>
          <div class='form-group'>
            <label>Title</label>
            <input type='text' class='form-control title' name='title' placeholder='Title' value=<%= post.title %>>
          </div>
          <div class='text-right'>
            <button type='submit' class='btn btn-primary'>Submit</button>
          </div> 
        </form> 
      </div>     
    <% } %>
    <script src='../../assets/js/post.js'></script>
  </body>
</html>