<!DOCTYPE html>
<html lang='en'>
  <%- include('../head') %>
  <body>
    <%- include('../navbar') %>
    <% if(typeof comment !== 'undefined') { %>
      <div class='d-flex align-items-center justify-content-center vh-100'>
        <form class='col-11 col-sm-9 col-md-7 p-4 form-comment' data-doc=<%= comment._id %>>
          <div class='form-group'>
            <label>Text</label>
            <input type='text' class='form-control' id='text' name='Text' placeholder='Text' value=<%= comment.text %>>
          </div>
          <div class='text-right'>
            <button type='submit' class='btn btn-primary'>Submit</button>
          </div> 
        </form> 
      </div>      
    <% } %>
    <script src='../../assets/js/comment.js'></script>
  </body>  
</html>