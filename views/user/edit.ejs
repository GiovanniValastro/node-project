<!DOCTYPE html>
<html lang='en'>
  <%- include('../head') %>
  <body>     
    <%- include('../navbar') %>
    <% if(typeof user !== 'undefined') { %>
      <div class='d-flex align-items-center justify-content-center vh-100'>
        <form class='col-11 col-sm-9 col-md-7 p-4 form' data-doc=<%= user._id %>>
          <div class='form-group'>
            <label>Nickname</label>
            <input type='text' class='form-control' id='nickname' name='nickname' placeholder='Nickname' value=<%= user.nickname %>>
          </div>
          <div class='row'>
            <div class='form-group col'>
              <label>City</label>
              <input type='text' class='form-control' id='city' name='city' placeholder='City' value=<%= user.city %>>
            </div>
            <div class='form-group col'>
              <label>Age</label>
              <input type='number' class='form-control' id='age' min='0' name='age' placeholder='Age' value=<%= user.age %>>
            </div>
          </div>
          <div class='text-right'>
            <button type='submit' class='btn btn-primary'>Submit</button>
          </div> 
          <% if(typeof error !== 'undefined' && error.length > 0) { %>
            <div class='alert col-md-4 mx-auto' style='background-color: #9b1b1b;' role='alert'>
              <div class='mx-auto'><%= error %></div>
            </div>
          <% } %>
        </form>  
      </div>
    <% } %>
    <script src='../../assets/js/user.js'></script>
  </body>  
</html>