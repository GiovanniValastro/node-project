<!DOCTYPE html>
<html lang='en'>
  <%- include('../head') %>
  <body>
    <div class='d-flex align-items-center justify-content-center vh-100'>
      <form action='/user' method='POST' class='col-11 col-sm-9 col-md-7 p-4'>
        <div class='form-group'>
          <label>Nickname</label>
          <input type='text' class='form-control' id='nickname' name='nickname' placeholder='Nickname'>
        </div>
        <div class='row'>
          <div class='form-group col'>
            <label>City</label>
            <input type='text' class='form-control' id='city' name='city' placeholder='City'>
          </div>
          <div class='form-group col'>
            <label>Age</label>
            <input type='number'class='form-control' id='replyNumber' min='0' name='age' data-bind='value:replyNumber' placeholder='Age'/>
          </div>
        </div>
        <div class='text-right'>
          <button type='submit' class='btn btn-primary'>Submit</button>
        </div> 
        <% if(typeof error !== 'undefined' && error.length > 0) { %>
          <div class='alert col-md-4 mx-auto' role='alert'>
            <div class='mx-auto'><%= error %></div>
          </div>
        <% } %>
      </form> 
    </div>
  </body>  
</html>